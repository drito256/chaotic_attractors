#source file/files
OBJS = main2.cpp glad.c

#compiler
CC = g++

#flag which ignores warnings
COMPILER_FLAGS = -w

#including libary
LINKER_FLAGS = -ldl -lglfw

#object file name (file that is supposed to be runned after compiling)
OBJ_NAME = prog

#compiling
all : $(OBJS)
		$(CC) $(OBJS) $(COMPILER_FLAGS) $(LINKER_FLAGS) -o $(OBJ_NAME)
				
